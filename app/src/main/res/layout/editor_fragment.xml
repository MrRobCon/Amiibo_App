<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorFragment"
    >


    <TextView
        android:id="@+id/nameHeading"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-black"
        android:text="Amiibo Card: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:hint="@string/enter_amiibo_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/nameHeading"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,MissingConstraints"
        tools:text="Amiibo name in here" />

    <TextView
        android:id="@+id/characterHeading"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:text="Character: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameHeading" />

    <TextView
        android:id="@+id/character"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:hint="@string/enter_character"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/characterHeading"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="Autofill,MissingConstraints"
        tools:text="Character here" />

    <TextView
        android:id="@+id/gameSeries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:text="Game Series: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterHeading" />

    <TextView
        android:id="@+id/description"
        android:layout_width="190dp"
        android:layout_height="27dp"
        android:layout_margin="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:hint="@string/enter_amiibo_gameseries"
        android:inputType="textCapSentences|textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gameSeries"
        app:layout_constraintTop_toBottomOf="@+id/character"
        app:layout_constraintVertical_bias="0.038"
        tools:ignore="Autofill"
        tools:text="Game Series in here" />


</androidx.constraintlayout.widget.ConstraintLayout>